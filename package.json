{
	"name": "image-description-generator",
	"version": "0.0.1",
	"packageManager": "pnpm@8.14.0",
	"scripts": {
		"knip": "knip",
		"dev": "vite dev --host --open",
		"build": "vite build",
		"preview": "vite preview --host --open",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"tests": "npm run test:e2e && npm run test:unit",
		"test:e2e": "playwright test",
		"test:unit": "vitest -u",
		"test:unit:ui": "vitest --ui",
		"db:generate": "drizzle-kit generate:sqlite",
		"db:push": "drizzle-kit push:sqlite",
		"db:pull": "drizzle-kit introspect:sqlite",
		"db:drop": "drizzle-kit drop",
		"db:check": "drizzle-kit check:sqlite",
		"db:studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@bobbymannino/svelte-progress": "^2.3.0",
		"@playwright/test": "^1.42.1",
		"@sveltejs/adapter-auto": "^3.1.1",
		"@sveltejs/enhanced-img": "^0.1.8",
		"@sveltejs/kit": "^2.5.2",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"@testing-library/jest-dom": "^6.4.2",
		"@testing-library/svelte": "^4.1.0",
		"@total-typescript/ts-reset": "^0.5.1",
		"@types/cookie": "^0.6.0",
		"@types/dompurify": "^3.0.5",
		"@types/eslint": "8.56.0",
		"@types/jsdom": "^21.1.6",
		"@types/node": "^20.11.24",
		"@types/nodemailer": "^6.4.14",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"@vitest/ui": "^1.3.1",
		"autoprefixer": "^10.4.18",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"jsdom": "^23.2.0",
		"knip": "^3.13.2",
		"postcss": "^8.4.35",
		"postcss-load-config": "^5.0.3",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.2",
		"prettier-plugin-tailwindcss": "^0.5.11",
		"svelte": "^4.2.12",
		"svelte-check": "^3.6.6",
		"svelte-meta-tags": "^3.1.1",
		"sveltekit-superforms": "^1.13.4",
		"sveltekit-view-transition": "^0.5.3",
		"tailwindcss": "^3.4.1",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.1.5",
		"vitest": "^1.3.1",
		"zod": "^3.22.4"
	},
	"type": "module",
	"dependencies": {
		"@vercel/analytics": "^1.2.2",
		"bits-ui": "^0.9.9",
		"clsx": "^2.1.0",
		"dompurify": "^3.0.9",
		"just-extend": "^6.2.0",
		"lucide-svelte": "^0.303.0",
		"mode-watcher": "^0.1.2",
		"nodemailer": "^6.9.11",
		"openai": "^4.28.4",
		"postcss-preset-env": "^9.4.0",
		"sharp": "^0.32.6",
		"svelte-sonner": "^0.3.19",
		"tailwind-merge": "^2.2.1",
		"tailwind-variants": "^0.1.20",
		"vite-plugin-kit-routes": "^0.2.12"
	}
}
